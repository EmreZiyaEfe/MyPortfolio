@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenekler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler ile ilgili işlemleri bu panelden yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Yetenek</th>
									<th scope="col">Değer</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Title</td>
										<td>@item.Value</td>
										<td><a href="/Skill/DeleteSkill/@item.Id" class="btn btn-danger">Sil</a></td>
										<td><a href="/Skill/UpdateSkill/@item.Id" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<td><a href="/Skill/CreateSkill/" class="btn btn-primary">Yeni Yetenek Girişi</a></td>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

