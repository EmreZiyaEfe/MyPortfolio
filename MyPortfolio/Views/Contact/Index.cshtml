@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim ile ilgili işlemleri bu panelden yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Telefon</th>
									<th scope="col">Email</th>
									<th scope="col">Adres</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td>@item.Address</td>
										<td><a href="/Contact/UpdateContact/@item.Id" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

