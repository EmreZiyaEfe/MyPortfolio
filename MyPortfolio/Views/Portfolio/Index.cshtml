@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolio</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolio ile ilgili işlemleri bu panelden yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Proje Adı</th>
									<th scope="col">Proje Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Resim Yolu</th>
									<th scope="col">Proje Url</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td>@item.Url</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.Id" class="btn btn-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.Id" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<td><a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Girişi</a></td>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

