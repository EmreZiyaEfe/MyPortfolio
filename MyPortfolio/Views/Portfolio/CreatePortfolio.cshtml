@model Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolio</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolio Ekle</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Proje Adı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Proje Başlık</label>
							<input type="text" asp-for="SubTitle" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<label>Resim Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Proje Url</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<button class="btn btn-primary">Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

